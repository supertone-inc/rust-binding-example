build:
    cmake -B build

    rustup target add wasm32-unknown-emscripten
    cargo build
    mkdir -p lib
    cp ../../target/wasm32-unknown-emscripten/debug/libhello_emscripten.a lib/libhello_emscripten.a

    cmake --build build
    cmake --install build --prefix hello

test: build
    cd tests && \
    npm install && \
    npm test
