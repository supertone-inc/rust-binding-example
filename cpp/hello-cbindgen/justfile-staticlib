build: && post-build
    cargo rustc --crate-type staticlib

[unix]
post-build:
    mkdir -p hello/lib
    cp \
        ../../target/debug/libhello_cbindgen.a \
        hello/lib/libhello_cbindgen.a

[windows]
post-build:
    mkdir -p hello/lib
    cp \
        ../../target/debug/hello_cbindgen.lib \
        hello/lib/hello_cbindgen.lib

test: build
    cmake \
        -S tests \
        -B tests/build \
        -D HELLO_STATIC=ON
    cmake --build tests/build
